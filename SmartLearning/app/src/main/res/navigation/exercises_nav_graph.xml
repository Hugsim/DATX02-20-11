<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/exercises_nav_graph"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/exerciseFragment">

    <fragment
        android:id="@+id/exerciseFragment"
        android:name="org.grammaticalframework.View.Fragments.MainExerciseFragment"
        android:label="ExerciseFragment"
        tools:layout="@layout/fragment_exercise">
        <action
            android:id="@+id/action_exerciseFragment_to_vocabularyFragment"
            app:destination="@id/vocabularyFragment" />
        <action
            android:id="@+id/action_exerciseFragment_to_grammarFragment"
            app:destination="@id/grammarFragment" />
    </fragment>
    <fragment
        android:id="@+id/vocabularyFragment"
        android:name="org.grammaticalframework.View.Fragments.VocabularyFragment"
        android:label="VocabularyFragment"
        tools:layout="@layout/fragment_vocabulary"/>
    <fragment
        android:id="@+id/grammarFragment"
        android:name="org.grammaticalframework.View.Fragments.GrammarFragment"
        android:label="GrammarFragment"
        tools:layout="@layout/fragment_grammar"/>

    <fragment
        android:id="@+id/lexiconFragment"
        android:name="org.grammaticalframework.View.Fragments.MainExerciseFragment"
        android:label="LexiconFragment"
        tools:layout="@layout/activity_lexicon">
    </fragment>

    <fragment
        android:id="@+id/homeFragmment"
        android:name="org.grammaticalframework.View.Fragments.MainExerciseFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_main_home">
    </fragment>
</navigation>